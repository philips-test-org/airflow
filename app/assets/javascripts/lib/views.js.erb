if (typeof application == "undefined") { application = {} }

application.drawBoard = function() {
  application.view();
};

application.calendar = function() {
  window.renderReact(window.airflow, "#workspace", {
    board: {
      type: "calendar",
      images: {
        spinner: "<%= image_path "ajax-loader.gif" %>",
      },
    },
    key: "calendarState",
  })
};

